<% content_for :auto_discovery_link do %>
	<%= auto_discovery_link_tag :rss, blog_posts_url(1, :format => :rss) %>
<% end %>

<ul class="blog_posts">
	<% Blog.recent_posts(1,3).each do |post| %>
		<% content_tag_for :li, post do %>
			<%= post.title %>
			<%= link_to "MORE...", blog_post_path(post.blog,post) %>
		<% end %>
	<% end %>
</ul>